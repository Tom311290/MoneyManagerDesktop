<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewControllers.CategoriesController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TableView fx:id="tableCategories" editable="true">
              <columns>
                <TableColumn fx:id="tableCategoriesColumnCategory" editable="false" prefWidth="134.0" text="Category" />
                  <TableColumn fx:id="tableCategoriesColumnNote" maxWidth="-1.0" minWidth="150.0" prefWidth="150.0" text="Note" />
              </columns>
            </TableView>
            <VBox>
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="addCategoryField" alignment="CENTER" promptText="Add category">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets left="5.0" right="5.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="addCategoryButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#addCategory" text="Add">
                           <HBox.margin>
                              <Insets right="5.0" top="10.0" />
                           </HBox.margin>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Button>
                        <Button fx:id="deleteCategoryButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#deleteCategory" text="Delete">
                           <HBox.margin>
                              <Insets right="5.0" top="10.0" />
                           </HBox.margin>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Button>
                        <Button fx:id="closeCategoryButton" alignment="BOTTOM_RIGHT" layoutX="212.0" layoutY="20.0" mnemonicParsing="false" onAction="#closeWindow" text="Close">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <TextArea fx:id="addNoteField" prefHeight="200.0" prefWidth="200.0" promptText="Add note">
                     <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="20.0" top="10.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
